[zookeeper]
servers=<%= @zookeeper_clusters %>
timeout=6
root-path="<%= @root_path %>"

[cluster.<%=@kafka_cluster['name']%>]
class-name="kafka"
servers=<%= @kafka_cluster['broker_ips'].collect{ |ip| ip += ":9092" } %>
topic-refresh=<%= @topic_refresh_interval %>
offset-refresh=<%= @offset_refresh_interval%>

[consumer.<%=@kafka_cluster['name']%>]
class-name="kafka"
cluster="<%=@kafka_cluster['name']%>"
servers=<%= @kafka_cluster['broker_ips'].collect{ |ip| ip += ":9092" } %>
group-blacklist="(console-consumer-|python-kafka-consumer-|manual)"
group-whitelist=""

[consumer.<%=@kafka_cluster['name']%>_zk]
class-name="kafka_zk"
cluster="<%=@kafka_cluster['name']%>"
servers=<%= @kafka_zookeeper_ips %>
zookeeper-path="/local"
zookeeper-timeout=30
group-blacklist="^(console-consumer-|python-kafka-consumer-).*$"
group-whitelist=""

[httpserver.default]
address=":<%=@burrow_port%>"

[notifier.slack]
class-name="http"
interval=<%=@notifier_interval%>
threshold=<%=@notifier_threshold%>
timeout=<%=@notifier_timeout%>
keepalive=<%=@notifier_keepalive%>
send-close=<%=@notifier_send_close%>
url-open="<%=@notifier_url_open%>"
template-open="<%=@root_path%>/slack_open.tmpl"
url-close="<%=@notifier_url_close%>"
template-close="<%=@root_path%>/slack_close.tmpl"
